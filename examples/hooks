set-hook -g -n 'after-new-session' 'run "notify-send new-session #{session_name}"'
set-hook -g -n 'before-new-window' 'display "new-window... #{window_name}"'
set-hook -g -n 'after-new-window' 'run -b "notify-send yay"'
set-hook -g -n 'after-break-pane' 'run -b "notify-send Broken #{window_id}"'
set-hook -g -n 'before-clear-history' 'display "CLEARING HISTORY!!!!!!!!!"'
set-hook -g -n 'after-capture-pane' 'run "xclip -o > /tmp/fdd"'
